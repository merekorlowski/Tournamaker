<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.merek.tournamaker.GameActivity"
    android:background="@drawable/adidas_soccer_ball">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team1"
        android:id="@+id/team1text"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="69dp"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Team2"
        android:id="@+id/team2text"
        android:layout_alignTop="@+id/team1text"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VS"
        android:id="@+id/vsTextView"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/team2text"
        android:layout_centerHorizontal="true"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker"
        android:layout_below="@+id/vsTextView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/team1text"
        android:layout_alignEnd="@+id/team1text"
        tools:ignore="NewApi"
        android:onClick="setTeam1Score" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numberPicker3"
        android:layout_below="@+id/vsTextView"
        android:layout_alignRight="@+id/team2text"
        android:layout_alignEnd="@+id/team2text"
        android:layout_alignLeft="@+id/team2text"
        android:layout_alignStart="@+id/team2text"
        tools:ignore="NewApi"
        android:onClick="setTeam2Score" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next game"
        android:id="@+id/nextGame"
        android:onClick="nextGame"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/numberPicker3"
        android:layout_alignEnd="@+id/numberPicker3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Game 1"
        android:id="@+id/gameTextView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp" />


</RelativeLayout>
