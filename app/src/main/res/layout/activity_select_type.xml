<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SelectTypeActivity"
    android:padding="0dp"
    android:gravity="fill"
    android:id="@+id/tournamentTypeBackgroundRelativeLayout"
    android:onClick="onClick">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:gravity="top|center"
        android:orientation="vertical"
        android:weightSum="1"
        android:background="@android:color/transparent">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help"
            android:id="@+id/button3"
            android:layout_gravity="right"
            android:onClick="showHelp2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Tournament Type"
            android:id="@+id/tournamentTypeTextView"
            android:textSize="30dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a tournament type"
            android:id="@+id/tournamentTypeDescriptionTextView"
            android:textSize="14dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Round Robin"
            android:id="@+id/roundRobinBtn"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="20dp"
            android:onClick="typeBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Play against each team for a fair chance!"
            android:id="@+id/roundRobinDescription"
            android:textSize="14dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Knockout"
            android:id="@+id/knockoutBtn"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:onClick="typeBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="You lose, you&apos;re out!"
            android:id="@+id/knockoutDescription"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Round Robin-Knockout"
            android:id="@+id/roundRobinKnockoutBtn"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:onClick="typeBtn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Round robin and top teams move to knockout"
            android:id="@+id/roundRobinAndKnockoutDescription"
            android:layout_gravity="center_horizontal"
            android:textSize="14dp" />

    </LinearLayout>

</RelativeLayout>