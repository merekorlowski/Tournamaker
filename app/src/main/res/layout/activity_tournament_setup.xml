<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TournamentSetup"
    android:background="@drawable/adidas_soccer_ball">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Select Teams"
        android:id="@+id/selectTeams"
        android:onClick="selectTeamsClick"
        android:textSize="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Team Manager"
        android:id="@+id/teamManager"
        android:onClick="teamManagerClick"
        android:textSize="20dp"
        android:layout_below="@+id/selectTeams"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Tournament"
        android:id="@+id/start"
        android:onClick="startClick"
        android:textSize="20dp"
        android:layout_below="@+id/teamManager"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textColor="@color/abc_background_cache_hint_selector_material_dark"
        android:textSize="30dp"
        android:text="Tournament setup"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
